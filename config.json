{
    "name": "AE_256",
    "n_gpu": 1,
    "arch": {
        "type": "AE",
        "args": {
            "latent_dim": 256
        }
    },
    "data_loader": {
        "type": "RTIDataLoader",
        "args": {
            "fonts_dir": "data/fonts",
            "annotation_file": "data/fonts.csv",
            "random_seed": 42,
            "total_samples": 1000000,
            "font_size": 32,
            "text_length": [
                3,
                8
            ],
            "text_image_dims": [
                128,
                32
            ],
            "font_fingerprint_dims": [
                32,
                32
            ],
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 12
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}